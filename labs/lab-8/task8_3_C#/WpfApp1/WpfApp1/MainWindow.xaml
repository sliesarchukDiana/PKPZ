<Window x:Class="RainbowQuiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вікторина: Кольори веселки" Height="380" Width="500"
        Background="#FFF5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введіть назву кольору веселки (українською):" 
                   FontWeight="Bold" FontSize="14" Margin="0 0 0 8"/>

        <TextBox x:Name="ColorInput" Grid.Row="1" Height="28" FontSize="14"/>

        <TextBlock x:Name="ResultText" 
                   Grid.Row="2" 
                   FontSize="14" 
                   TextWrapping="Wrap" 
                   Margin="0 15 0 0"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
            <Button x:Name="CheckButton" 
                    Content="Перевірити" 
                    Width="120" Height="35" Margin="5"
                    Background="#4CAF50" Foreground="White"
                    Click="CheckButton_Click"/>

            <Button x:Name="ExitButton"
                    Content="Вихід" 
                    Width="80" Height="35" Margin="5"
                    Background="#F44336" Foreground="White"
                    Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>