<Window x:Class="TupleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ціни продуктів" Height="350" Width="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <StackPanel Margin="5">
                <TextBlock Text="Назва продукту:"/>
                <TextBox x:Name="ProductNameBox" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Ціна:"/>
                <TextBox x:Name="PriceBox" Width="100"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Країна походження:"/>
                <TextBox x:Name="CountryBox" Width="120"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Кількість:"/>
                <TextBox x:Name="QuantityBox" Width="80"/>
            </StackPanel>
            <Button x:Name="AddButton" Content="Додати" Width="80" Margin="5" Click="AddButton_Click"/>
        </StackPanel>

        <ListBox x:Name="ProductsList" Grid.Row="1" Margin="0 0 0 10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Показати всі" Width="120" Margin="5" Click="ShowAll_Click"/>
            <Button Content="Соціальні продукти" Width="150" Margin="5" Click="ShowSocial_Click"/>
            <TextBlock x:Name="ResultText" VerticalAlignment="Center" Margin="10 0 0 0"/>
        </StackPanel>
    </Grid>
</Window>