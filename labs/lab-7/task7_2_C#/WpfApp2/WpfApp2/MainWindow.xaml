<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фірма" Height="500" Width="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Прізвище:" Margin="5,0,5,0"/>
                <TextBox x:Name="NameInput" Width="150" Margin="5"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Стать:" Margin="5,0,5,0"/>
                <ComboBox x:Name="GenderInput" Width="100" Margin="5">
                    <ComboBoxItem Content="Чоловіча"/>
                    <ComboBoxItem Content="Жіноча"/>
                </ComboBox>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Зарплата:" Margin="5,0,5,0"/>
                <TextBox x:Name="SalaryInput" Width="100" Margin="5"/>
            </StackPanel>

            <Button Content="Додати" Width="100" Margin="10,5" Click="AddEmployee_Click"/>
        </StackPanel>

        <DataGrid x:Name="EmployeesGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Прізвище" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Стать" Binding="{Binding Gender}" Width="*"/>
                <DataGridTextColumn Header="Зарплата" Binding="{Binding Salary}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Сортувати за зарплатою" Width="180" Height="50" Margin="5" Click="Sort_Click"/>
            <Button Content="Найвищі зарплати" Width="180" Height="50" Margin="5" Click="ShowMaxSalary_Click"/>
        </StackPanel>

        <TextBlock x:Name="ResultText" Grid.Row="2" Margin="10,90,10,0" 
                   TextAlignment="Center" FontWeight="Bold" Foreground="DarkBlue"/>
    </Grid>
</Window>
