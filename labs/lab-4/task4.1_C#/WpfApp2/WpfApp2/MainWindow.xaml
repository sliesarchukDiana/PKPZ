<Window x:Class="WpfBuildingsLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buildings Lab" Height="420" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,8">
            <Button x:Name="btnLoad" Width="120" Height="30" Margin="0,0,8,0" Click="BtnLoad_Click">Load and Process</Button>
            <Button x:Name="btnSelect" Width="140" Height="30" Margin="0,0,8,0" Click="BtnSelect_Click">Select Input File...</Button>
            <TextBlock x:Name="txtFile" VerticalAlignment="Center">Input Data.txt (default)</TextBlock>
        </StackPanel>


        <DataGrid x:Name="dgResults" Grid.Row="1" AutoGenerateColumns="True" CanUserAddRows="False" IsReadOnly="True" />


        <StatusBar Grid.Row="2" Height="28">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus">Ready</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>