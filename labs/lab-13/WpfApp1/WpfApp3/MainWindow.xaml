<Window x:Class="MultiRecognizerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multi-Entity Recognizer (Lab 1.3)" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="150"/>  <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button x:Name="BtnLoad" Content="Завантажити файл" Width="150" Height="30" Click="BtnLoad_Click" Margin="0,0,10,0"/>
            <Button x:Name="BtnSave" Content="Зберегти звіт" Width="150" Height="30" Click="BtnSave_Click" IsEnabled="False"/>
        </StackPanel>

        <GroupBox Header="Вхідний текст" Grid.Row="1">
            <TextBox x:Name="TxtInput" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" 
                     IsReadOnly="True" Padding="5" AcceptsReturn="True"/>
        </GroupBox>

        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch"/>

        <GroupBox Header="Деталі розпізнавання" Grid.Row="3">
            <DataGrid x:Name="GridResults" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Категорія" Binding="{Binding Category}" Width="150" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Знайдений текст" Binding="{Binding Text}" Width="200"/>
                    <DataGridTextColumn Header="Розпізнане значення / Тип" Binding="{Binding Value}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Header="Статистика (Кількість знайдених елементів)" Grid.Row="4" Margin="0,10,0,0">
            <TextBox x:Name="TxtStats" Height="100" IsReadOnly="True" TextWrapping="Wrap" Background="#F0F0F0" FontFamily="Consolas"/>
        </GroupBox>
    </Grid>
</Window>