<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Підрахунок приголосних" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Введіть текст:" FontSize="16"/>
            <TextBox x:Name="InputBox" FontSize="16" Margin="0,5,0,10"/>
            <Button Content="Порахувати" Click="CountConsonants" FontSize="16"/>
            <TextBlock x:Name="ResultText" FontSize="16" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>