<Window x:Class="PersonaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Персона" Width="400" MinHeight="450" SizeToContent="Height"> 
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Введіть дані персони:" FontWeight="Bold" Margin="0 0 0 10"/>

            <Label Content="Ім'я:"/>
            <TextBox x:Name="NameBox" Margin="0 5"/>

            <Label Content="Прізвище:"/>
            <TextBox x:Name="SurnameBox" Margin="0 5"/>

            <Label Content="Вік:"/>
            <TextBox x:Name="AgeBox" Margin="0 5"/>

            <Label Content="Стать:"/>
            <TextBox x:Name="GenderBox" Margin="0 5"/>

            <Label Content="Зріст (см):"/>
            <TextBox x:Name="HeightBox" Margin="0 5"/>

            <Label Content="Вага (кг):"/>
            <TextBox x:Name="WeightBox" Margin="0 5"/>

            <Label Content="Місто:"/>
            <TextBox x:Name="CityBox" Margin="0 5"/>

            <Button Content="Створити об'єкт" Click="Create_Click" Margin="0 10 0 0"/>
            <Button Content="Зберегти у файл" Click="Save_Click" Margin="0 5 0 0"/>
            <Button Content="Показати дії" Click="Actions_Click" Margin="0 5 0 0"/>
        </StackPanel>

        <TextBox x:Name="OutputBox" Grid.Row="1" Margin="0 10 0 0" 
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" Height="100"/>
    </Grid>
</Window>